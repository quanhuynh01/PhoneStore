
<table class="data-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Brand Name</th>
      <th scope="col">Country</th>
      <th scope="col">Date Create</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach((item, index) => { %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= item.BrandName %></td>
      <td><%= item.Country %></td>
      <td><%= item.createdAt %></td>
      <td>
        <a class="btn btn-outline-warning " href="brand/edit/<%= item.BrandId %>"><i class="bi bi-pencil-square"></i></a>
        <button class="btn btn-danger delete-brand"><i class="bi bi-trash"></i></button>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<!-- Thêm mã JavaScript vào cuối tệp ejs -->
<script>
  $(document).ready(function() {
    $('.delete-brand').on('click', function() {
      var brandId = $(this).data('id');
      if (confirm('Are you sure you want to delete this brand?')) {
        $.ajax({
          url: '/brand/delete/' + brandId,
          type: 'DELETE',
          success: function(response) {
            $('#brand-' + brandId).remove();
            alert('Brand deleted successfully!');
          },
          error: function(error) {
            alert('Error deleting brand!');
          }
        });
      }
    });
  });
</script>